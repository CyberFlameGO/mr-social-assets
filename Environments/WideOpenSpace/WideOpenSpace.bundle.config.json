            "DirectionalLight_node": {
              "light": {
                "type": "directional",
                "color": "#fdf5c2",
                "intensity": 12,
                "position": "15.23 20 -9.53",
                "castShadow": true,
                "shadowBias": 0.0001,
                "shadowCameraFar": 90,
                "shadowCameraNear": 0,
                "shadowCameraTop": 40,
                "shadowCameraRight": 45,
                "shadowCameraBottom": -35,
                "shadowCameraLeft": -45,
                "shadowMapHeight": 4096,
                "shadowMapWidth": 4096
              },
              "hide-when-quality": "low"
            }
          }
        }
      ],
      "gltf-unlit-generator": {
        "lighten": 0.2
      }
    }
  ]
