  "assets": [
    {
      "name": "MeetingSpaceMeshes",
      "src": "../../MayaProjects/ArchitecturalKit/Export/WideOpenSpace.fbx",
      "components": [
        "../DefaultEnvironment.json",
        {
          "scenes": {
            "Root Scene": {
              "scene-shadow": {
